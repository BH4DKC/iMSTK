#include <bandit/bandit.h>
#include <memory>

// SimMedTK includes
#include "Mesh/VegaVolumetricMesh.h"
#include "Mesh/SurfaceMesh.h"
#include "IO/IOMesh.h"

const std::string vegaMeshFileName = "@CMAKE_CURRENT_BINARY_DIR@/SampleMesh.veg";
const std::string vtuMeshFileName = "@CMAKE_CURRENT_BINARY_DIR@/SampleMesh.vtu";
const std::string stlMeshFileName = "@CMAKE_CURRENT_BINARY_DIR@/SampleMesh.stl";
const std::string objMeshFileName = "@CMAKE_CURRENT_BINARY_DIR@/SampleMesh.obj";
const std::string ds3MeshFileName = "@CMAKE_CURRENT_BINARY_DIR@/SampleMesh.3ds";

using namespace bandit;

go_bandit([](){

    describe("Vega Volumetric Mesh", []() {
        it("constructs", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            AssertThat(io != nullptr, IsTrue());
        });
        it("loads veg mesh", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            io->read(vegaMeshFileName);
            AssertThat(io->getMesh() != nullptr, IsTrue());
        });
        it("loads vtu mesh", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            io->read(vtuMeshFileName);
            AssertThat(io->getMesh() != nullptr, IsTrue());
        });
        it("loads stl mesh", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            io->read(stlMeshFileName);
            AssertThat(io->getMesh() != nullptr, IsTrue());
        });
        it("loads veg mesh", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            io->read(objMeshFileName);
            AssertThat(io->getMesh() != nullptr, IsTrue());
        });
        it("loads 3ds mesh", []() {
            std::shared_ptr<IOMesh> io = std::make_shared<IOMesh>();
            io->read(ds3MeshFileName);
            AssertThat(io->getMesh() != nullptr, IsTrue());
        });

    });
});
